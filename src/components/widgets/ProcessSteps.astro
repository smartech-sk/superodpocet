---
interface Step {
  letter?: string;
  title: string;
  description?: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props;
---

<div class="process-grid">
  {steps.map((step, index) => (
    <div class="process-item">
      <div class="process-number">
        {step.letter ?? index + 1}
      </div>
      <div class="process-underline"></div>
      <p class="process-text">
        {step.description ?? step.title}
      </p>
    </div>
  ))}
</div>
