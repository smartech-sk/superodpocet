---
import { getCollection } from 'astro:content';

interface Props {
  category: 'vav' | 'investicie' | 'patent-box';
}

const { category } = Astro.props;

const allFAQs = await getCollection('faq', ({ data }) => {
  return data.category === category;
});

const sortedFAQs = allFAQs.sort((a, b) => a.data.order - b.data.order);
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Najčastejšie otázky
      </h2>
      <div class="space-y-4">
        {sortedFAQs.map(async (faq) => {
          const { Content } = await faq.render();
          return (
            <details class="group bg-white border border-gray-200 rounded-lg overflow-hidden">
              <summary class="flex justify-between items-center cursor-pointer px-6 py-4 hover:bg-gray-50 transition">
                <h3 class="text-lg font-semibold text-gray-900 pr-8">
                  {faq.data.question}
                </h3>
                <svg
                  class="w-5 h-5 text-gray-500 flex-shrink-0 transition-transform group-open:rotate-180"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-4 pt-2 text-gray-600 prose prose-sm max-w-none">
                <Content />
              </div>
            </details>
          );
        })}
      </div>
    </div>
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>
