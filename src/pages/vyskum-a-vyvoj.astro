---
import BaseLayout from '../layouts/BaseLayout.astro';
import FAQ from '../components/widgets/FAQ.astro';
import ProcessSteps from '../components/widgets/ProcessSteps.astro';
import { getEntry } from 'astro:content';

const pageContent = await getEntry('pages', 'vyskum-a-vyvoj');
const { Content } = await pageContent.render();
const { title, description, hero, benefits } = pageContent.data;

const processSteps = [
  {
    letter: 'A',
    title: 'Identifikácia činností ako výskum a vývoj',
    description: 'Určte, ktoré aktivity vo vašej firme spĺňajú podmienky VaV projektu.',
  },
  {
    letter: 'B',
    title: 'Vypracovanie písomného projektu VaV',
    description: 'Vytvorte dokumentáciu projektu podľa zákonných požiadaviek.',
  },
  {
    letter: 'C',
    title: 'Oddelená evidencia a vyčíslenie daňových výdavkov',
    description: 'Vedenie osobitnej evidencie nákladov súvisiacich s projektom.',
  },
  {
    letter: 'D',
    title: 'Kontrola vylúčených položiek a zákazu kumulácie',
    description: 'Overenie, že náklady nie sú vylúčené a nekombinujú sa s inými odpočtami.',
  },
  {
    letter: 'E',
    title: 'Výpočet superodpočtu na VaV',
    description: 'Vypočítanie výšky odpočtu podľa platnej legislatívy.',
  },
  {
    letter: 'F',
    title: 'Uplatnenie superodpočtu v daňovom priznaní',
    description: 'Zahrnutie odpočtu do daňového priznania.',
  },
];
---

<BaseLayout title={title} description={description}>
  <div class="bg-gradient-to-b from-blue-50 to-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          {hero.heading}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {hero.text}
        </p>
      </div>
    </div>
  </div>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>

        {benefits && (
          <>
            <h3 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Odpočítať si môžete napríklad:</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-600 mb-8">
              {benefits.map((benefit) => (
                <li>{benefit}</li>
              ))}
            </ul>
          </>
        )}
      </div>
    </div>
  </section>

  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Kalkulačka</h2>
        <div class="bg-white rounded-lg shadow-md p-8">
          <p class="text-center text-gray-600">
            Kalkulačka bude implementovaná v ďalšej fáze.
          </p>
        </div>
      </div>
    </div>
  </section>

  <ProcessSteps steps={processSteps} />

  <FAQ category="vav" />

  <section class="bg-blue-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-6">
        Potrebujete poradiť, či vaše projekty spĺňajú podmienky superodpočtu?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Pomôžeme vám s celým procesom – od analýzy aktivít až po dokumentáciu pre daňové priznanie.
      </p>
      <a
        href="https://www.smartech.sk"
        target="_blank"
        rel="noopener"
        class="inline-block bg-white text-blue-900 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition"
      >
        Kontaktujte nás
      </a>
    </div>
  </section>
</BaseLayout>
